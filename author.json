{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Author",
  "description": "Require an author.",
  "$id": "author.json",
  "version": "0.0.2",
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "#/definitions/Metadata"
    }
  },
  "required": [
    "metadata"
  ],
  "definitions": {
    "Metadata": {
      "type": "object",
      "properties": {
        "resourceInfo": {
          "$ref": "#/definitions/ResourceInfo"
        }
      },
      "required": [
        "resourceInfo"
      ],
      "title": "Metadata"
    },
    "ResourceInfo": {
      "type": "object",
      "properties": {
        "citation": {
          "$ref": "#/definitions/Citation"
        }
      },
      "errorMessage": "Main citation is required.",
      "required": [
        "citation"
      ],
      "title": "ResourceInfo"
    },
    "Citation": {
      "type": "object",
      "properties": {
        "responsibleParty": {
          "type": "array",
          "minItems": 1,
          "contains": {
            "properties": {
              "role": {
                "const": "author",
                "errorMessage": "One role must be author."
              }
            }
          },
          "errorMessage": {
            "minItems": "At least one responsibleParty is required in the resource citation.",
            "contains": "At least one author should be present in citation."
          }
        }
      },
      "required": [
        "responsibleParty"
      ],
      "title": "Citation"
    }
  }
}
