{
  "$id": "project-metadata.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metadata",
  "description": "The main body of the metadata. Requires fields determined by the USFWS Alaska Region DST for Projects.",
  "version": "0.0.2",
  "type": "object",
  "required": [
    "metadata"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "metadataInfo": {
          "type": "object",
          "required": [
            "metadataContact"
          ],
          "properties": {
            "metadataContact": {
              "type": "array",
              "properties": {
                "role": {
                  "const": "pointOfContact",
                  "errorMessage": "At least one person should be provided with the role 'pointOfContact' under the 'Metadata Contacts' section of the 'Metadata' tab."
                }
              }
            }
          }
        },
        "resourceInfo": {
          "$ref": "resourceInfo.json#"
        }
      },
      "required": {
        "resourceInfo",
        "metadataInfo"
      },
      "title": "Metadata"
    }
  }
}
