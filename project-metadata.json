{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Author",
  "description": "Require an author.",
  "$id": "author.json",
  "version": "0.1.0",
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "#/definitions/Metadata"
    },
    "resourceInfo": {
      "$ref": "resourceInfo.json"
    }
  },
  "required": [
    "metadata",
    "resourceInfo"
  ],
  "definitions": {
    "Metadata": {
      "type": "object",
      "properties": {
        "metadataInfo": {
          "$ref": "#/definitions/MetadataInfo"
        }
      },
      "required": [
        "metadataInfo"
      ],
      "title": "Metadata"
    },
    "MetadataInfo": {
      "type": "object",
      "properties": {
        "metadataContact": {
          "$ref": "#/definitions/MetadataContact"
        }
      },
      "required": [
        "metadataContact"
      ],
      "title": "MetadataInfo"

    },
    "MetadataContact": {
      "type": "array",
      "minItems": 1,
      "contains": {
        "properties": {
          "role": {
            "const": "pointOfContact",
            "errorMessage": "At least one person should be provided with the role 'pointOfContact' under the 'Metadata Contacts' section of the 'Metadata' tab."
          }
        }
      },
      "required": [
        "role"
      ]
    }
  }
}
