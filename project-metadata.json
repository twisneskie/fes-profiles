{
  "$id": "https://raw.githubusercontent.com/twisneskie/fes-profiles/main/project-metadata.json#",
  "$schema": "http://json-schema.org/2020-12/schema#",
  "title": "Metadata",
  "description": "The main body of the metadata. Requires fields determined by the USFWS Alaska Region DST for Projects.",
  "version": "0.0.2",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "metadataInfo": {
      "type": "object",
      "required": [
        "metadataContact"
      ],
      "properties": {
        "metadataContact": {
          "type": "array",
          "properties": {
            "role": {
              "const": "pointOfContact",
              "errorMessage": "At least one person should be provided with the role 'pointOfContact' under the 'Metadata Contacts' section of the 'Metadata' tab."
            }
          }
        }
      }
    },
    "resourceInfo": {
      "$ref": "https://raw.githubusercontent.com/twisneskie/fes-profiles/main/resourceInfo.json#"
    },
  },
  "required": [
    "metadataInfo",
    "resourceInfo"
  ]
}
